<p id="notice"><%= notice %></p>

<h1>Teachers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Subject</th>
      <th>Degree</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teachers.each do |teacher| %>
     <% teacher.subjects do |subject| %>
      <tr>
        <td><%= teacher.name %></td>
        <td><%= subject.name %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
<br>