<p id="notice"><%= notice %></p>

<h1>Degrees</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <tr>
        <td><%= @degree.name %></td>
      </tr>
  </tbody>
</table>

<table>
  <thead>
    <tr>
      <th>Teacher</th>
      <th>Subject</th>
      <th colspan="3"></th>
    </tr>
  </thead>

    <tbody>
    <% @degree.teachers.each do |teacher| %>
        <% @degree.subjects.each do |subject| %>
          <tr>
            <td><%= teacher.name %></td>
            <td><%= subject.name %></td>
          </tr>
        <% end %>
    <% end %>
  </tbody>
</table>

